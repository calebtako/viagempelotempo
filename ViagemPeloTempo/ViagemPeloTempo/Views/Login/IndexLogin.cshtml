@model ViagemPeloTempo.Models.Jogador
@{
    Layout = string.Empty;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViagemPeloTempo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form action="@Url.Action("Entrar", "Login")" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <img class="img-responsive" src="~/fonts/imagens/logo.jpg" />
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <h3>Login de Jogador</h3>
                            <hr />
                        </div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace((string)ViewBag.MsgErro))
                    {
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="alert alert-danger" role="alert"> <strong>Erro!</strong> @ViewBag.MsgErro</div>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, "E-mail", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Senha, "Senha", new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btn btn-success btn-block" id="btnEntrar">Entrar</button>
                        </div>
                        <div class="col-md-6 text-right">
                            <a class="btn btn-primary btn-block" href="@Url.Action("IndexCad", "Cadastro")">Cadastro</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ViagemPeloTempo</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

