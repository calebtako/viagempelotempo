@using ViagemPeloTempo.Models
<div class="row">
    <div class="col-md-12 text-center">
        <img src="~/fonts/imagens/logo.jpg" />
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <h3>Ranking de Jogadores</h3>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 text-center">
                    <table class="table table-striped" border="1" style="border: 1px solid black;">
                        <thead>
                            <tr>
                                <th>MELHORES DO MÊS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ranking in (List<Ranking>)ViewBag.MelhoresDoMes)
                            {
                                <tr>
                                    <td>@string.Format("{0} ({1} acertos)", ranking.Jogador.NomeUsuario, ranking.Acertos)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6 text-center">
                    <table class="table table-striped" border="1" style="border: 1px solid black;">
                        <thead>
                            <tr>
                                <th>MELHORES DA SEMANA</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ranking in (List<Ranking>)ViewBag.MelhoresDaSemana)
                            {
                                <tr>
                                    <td>@string.Format("{0} ({1} acertos)", ranking.Jogador.NomeUsuario, ranking.Acertos)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
